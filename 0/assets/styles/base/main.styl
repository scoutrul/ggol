@require '../vars/index.styl';

*
  z-index 1
  // outline: 1px solid #1e1e1e
  outline-offset -1px
body
  margin 0
  overflow-y: scroll
  width: 100%
#app
  font-family: "GraphikLCG", sans-serif
  font-size: 16px;
  line-height: 24px;
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  background-color #FFF
  overflow hidden
  .main
    margin: 60px auto
    z-index: 0
    width: 100%

  .container
    z-index 1
    display: flex
    flex-flow column nowrap
    box-sizing: border-box
    padding-bottom: 0
    padding-top: 0
    margin-left auto
    margin-right auto
    width: 100%;
    @media (min-width 1160px)
      max-width $XL_break
